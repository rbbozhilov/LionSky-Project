@model IEnumerable<ExerciseViewModel>

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />


<div class="row">

    @if (Model.Any())
    {

        @foreach (var exercise in Model)
        {
            <div class="col-sm-3">
                <div class="well">
                    <p>@exercise.Name</p>
                    <img src="@exercise.ImageUrl" class="img-circle" height="100" width="100" alt="Avatar">
                </div>
            </div>
            <div class="col-sm-9">
                <div class="well">
                    @exercise.Description
                </div>
            </div>
        }

    }
    else
    {
        <h1> Don't have exercises in the moment, try soon !</h1>
    }