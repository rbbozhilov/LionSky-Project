@model CalculatorViewModel


<div class="jumbotron text-center">
    <img src="https://www.muscleandfitness.com/wp-content/uploads/2019/04/12-Weeks-Mass-Phil-Heath-Bench-Dumbbells.jpg?quality=86&strip=all" />
    <h1>Here you can check your results</h1>
</div>



<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr class="success">
                    <td>Protein</td>
                    <td>@String.Format("{0:0.0}", Model.Protein) g</td>
                </tr>
                <tr class="danger">
                    <td>Calories</td>
                    <td>@String.Format("{0:0.0}", Model.Calories) g</td>
                </tr>
                <tr class="info">
                    <td>Fat</td>
                    <td>@String.Format("{0:0.0}", Model.Fat) g</td>
                </tr>
                <tr class="warning">
                    <td>Carbohydrates</td>
                    <td>@String.Format("{0:0.0}", Model.Carbohydrates) g</td>
                </tr>
            </tbody>
        </table>
    </div>

</body>
</html>

