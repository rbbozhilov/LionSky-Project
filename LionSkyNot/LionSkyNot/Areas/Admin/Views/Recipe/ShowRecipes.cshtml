@model IEnumerable<RecipeFormModelForAdmin>

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />


<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Recipe Name</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var recipe in Model)
                {

                    <tr>
                        <td>@recipe.Name</td>
                        <td><a asp-controller="Recipe" asp-action="EditRecipe" asp-route-id="@recipe.Id" class="btn btn-warning">Edit Product</a></td>
                        <td><a asp-controller="Recipe" asp-action="DeleteRecipe" asp-route-id="@recipe.Id" class="btn btn-danger">Delete Product</a></td>
                    </tr>
                }

            </tbody>
        </table>

    }
    else
    {
        <h1> Don't have recipes yet , try soon !</h1>
    }

