@model IEnumerable<ClassFormModelForAdmin>

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

@{
    ViewData["Title"] = "All Classes";
}

<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Class Name</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var currentClass in Model)
                {
                    <tr>
                        <td>@currentClass.ClassName</td>
                        <td><a asp-controller="Class" asp-action="EditClass" asp-route-id="@currentClass.Id" class="btn btn-warning">Edit Class</a></td>
                        <td><a asp-controller="Class" asp-action="DeleteClass" asp-route-id="@currentClass.Id" class="btn btn-danger">Delete Class</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1> Don't have classes yet , try soon !</h1>
    }
