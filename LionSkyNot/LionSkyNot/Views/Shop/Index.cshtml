@model AllProductsViewModel


<form method="get">
    <div class="row-mb-5">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Brand"></label>
                <select asp-for="Brand" class="form-control">

                    @foreach (var brand in Model.Brands)
                    {
                        <option value=@brand>@brand</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row-mb-5">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" class="form-control">

                    @foreach (var type in Model.Types)
                    {
                        <option value=@type>@type</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row-mb-5">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="SortedBy"></label>
                <select asp-for="SortedBy" class="form-control">
                    <option value="0">Sorting By Price</option>
                    <option value="1">Sorting By Price Descending</option>
                    <option value="2">Sorting By Name</option>
                    <option value="3">Sorting By Most Buys</option>
                </select>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>


<br />
<br />
@foreach (var product in Model.Products)
{


    <div class="container">
        <div class="row">

            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@product.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Brand: @product.Brand</li>
                    <li class="list-group-item">Type: @product.Type</li>
                    <li class="list-group-item">Price: @String.Format(product.Price % 1 == 0 ? "{0:0}" : "{0:0.00}", product.Price) £</li>

                    @if (@product.InStock == 0)
                    {
                        <li class="list-group-item">Soon in stock</li>
                    }
                    <li class="list-group-item">In Stock: @product.InStock</li>
                </ul>
                @if (@product.InStock == 0)
                {
                    <div class="card-body">
                        <a href="#" class="btn btn-primary" disabled>Add to wishlist</a>
                    </div>

                }
                else
                {
                    <div class="card-body">
                        <a asp-controller="WishList" asp-action="AddToWishList" asp-route-id="@product.Id" class="btn btn-danger">Add to wishlist</a>
                    </div>
                }

            </div>

        </div>
    </div>
}
