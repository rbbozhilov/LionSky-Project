@model IEnumerable<TrainerFormModelForAdmin>

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

@{
    ViewData["Title"] = "All Trainers";
}


<div class="row">

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Trainer Name</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var trainer in Model)
                {

                    <tr>
                        <td>@trainer.FullName</td>
                        <td><a asp-controller="Trainer" asp-action="DeleteTrainer" asp-route-id="@trainer.Id" class="btn btn-danger">Delete Trainer</a></td>
                    </tr>
                }

            </tbody>
        </table>

    }
    else
    {
        <h1> Don't have trainers yet , try soon !</h1>
    }


