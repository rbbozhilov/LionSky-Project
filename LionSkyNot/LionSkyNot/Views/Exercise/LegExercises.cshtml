@model IEnumerable<ExerciseViewModel>

<div class="row">

    @if (Model.Any())
    {

        @foreach (var exercise in Model)
        {
            <div class="col-sm-3">
                <div class="well">
                    <p>@exercise.Name</p>
                    <img src="@exercise.ImageUrl" class="img-circle" height="100" width="100" alt="Avatar">
                </div>
            </div>
            <div class="col-sm-9">
                <div class="well">
                    <iframe width="560"
                    height="315"
                    src="@exercise.VideoUrl"
                    frameborder="0"
                    allowfullscreen></iframe>
                </div>
            </div>
        }

    }
    else
    {
        <h1> Don't have exercises for legs yet , try soon !</h1>
    }
