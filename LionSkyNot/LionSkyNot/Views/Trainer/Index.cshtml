@model AllTrainersViewModel

 @{
    ViewData["Title"] = "Trainers";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>

        .container {
            padding: 2rem 0rem;
        }

        h4 {
            margin: 2rem 0rem 1rem;
        }

        .table-image {
            td, th

        {
            vertical-align: middle;
        }

        }

        .carousel-inner img {
            width: 100%; /* Set width to 100% */
            margin: auto;
            min-height: 200px;
        }

    </style>
</head>
<body style="background-color:grey;">



    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
            <li data-target="#myCarousel" data-slide-to="5"></li>

        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="https://media.stack.com/stack-content/uploads/2013/07/05193515/The-Missing-Component-of-Your-Wrestling-Training-Program-stack.jpg" alt="Image">
                <div class="carousel-caption">
                    <h3>Wrestlering Trainers</h3>
                    <p style="color:white">Check it  <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("WrestlerTrainers", "Trainer")'">NOW</button></p>
                </div>
            </div>

            <div class="item">
                <img src="https://img.freepik.com/free-photo/shirtless-woman-exercising-with-trainer-boxing-self-defense-lesson-female-male-fight_136403-7600.jpg" alt="Image">
                <div class="carousel-caption">
                    <h3>Box Trainers</h3>
                    <p style="color:white">Check it  <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("BoxTrainers", "Trainer")'">NOW</button></p>
                </div>
            </div>

            <div class="item">
                <img src="https://i2-prod.irishmirror.ie/incoming/article13226355.ece/ALTERNATES/s615/0_Screen-Shot-2018-09-11-at-124324.png" alt="Image">
                <div class="carousel-caption">
                    <h3>Mma Trainers</h3>
                    <p style="color:white">Check it  <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("MmaTrainers", "Trainer")'">NOW</button></p>
                </div>
            </div>


            <div class="item">
                <img src="https://media.istockphoto.com/photos/male-personal-trainer-helping-sportswoman-to-do-exercises-with-at-picture-id972833328?k=20&m=972833328&s=612x612&w=0&h=LtGaklhIxyJbMkxEKDNWzGXgX-zmONE2-llVRDrv17c=" alt="Image">
                <div class="carousel-caption">
                    <h3>Fitness Trainers</h3>
                    <p style="color:white">Check it  <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("FitnessTrainers", "Trainer")'">NOW</button></p>
                </div>
            </div>

            <div class="item">
                <img src="https://www.personaltrainingmaster.co.uk/wp-content/uploads/2018/09/Usain-Bolt-2.jpg" alt="Image">
                <div class="carousel-caption">
                    <h3>Athletic Trainers</h3>
                    <p style="color:white">Check it  <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("AthleticTrainers", "Trainer")'">NOW</button></p>
                </div>
            </div>

            <div class="item">
                <img src="https://www.wellintra.com/wp-content/uploads/2019/11/becoming-yoga-instructor-Mumbai-720x429.jpg" alt="Image">
                <div class="carousel-caption">
                    <h3>Yoga Trainers</h3>
                    <p style="color:white">Check it  <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("YogaTrainers", "Trainer")'">NOW</button></p>
                </div>
            </div>


        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</body>
</html>

<br />
<br />
<form method="get">
    <div class="form-group">
        <label asp-for="SearchTerm">Search by trainer name</label>
        <input asp-for="SearchTerm" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

